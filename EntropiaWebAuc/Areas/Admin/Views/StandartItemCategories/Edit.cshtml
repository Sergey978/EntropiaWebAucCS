@model EntropiaWebAuc.Domain.Entities.StandartItemCategory

@{
    ViewBag.Title = "Standart Item Category: Edit " + @Model.Name;
}

@if (Model.Name == null)
{
    <h1>Create new Standart Item</h1>
    ViewBag.button = "Create";
}
else
{
    <h1>Edit @Model.Name</h1>
    ViewBag.button = "Edit";
}

@using (Html.BeginForm("Edit", "StandartItemCategory"))
{
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.HiddenFor(m => m.CategoryId)
        @Html.LabelFor(model => model.CategoryId)
        @Html.DisplayFor(model => model.CategoryId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>


   

    <div class="form-group">
        @Html.LabelFor(model => model.ParentCategory)
        @Html.TextBoxFor(model => model.ParentCategory, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ParentCategory)
    </div>

    <div>
        <input type="submit" class="btn btn-info" value="@ViewBag.button" />

    </div>

}