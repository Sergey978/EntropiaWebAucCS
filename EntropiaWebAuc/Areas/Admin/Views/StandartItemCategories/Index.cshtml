@model IEnumerable<EntropiaWebAuc.Domain.StandartItemCategories>

@{
    ViewBag.Title = "Standart Item Categories";
}

<h2>List  Standart Item Categories</h2>
<table class="table table-striped table-responsive ">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.ParentId)</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.ParentId)</td>
            
            <td>


                @using (Html.BeginForm("Delete", "StandartItemCategories"))
                {
                    @Html.Hidden("id", item.Id)
                    <input type="button" value="Edit" class="btn btn-info"
                           onclick="location.href='@Url.Action("Edit", "StandartItemCategories", new { id = item.Id })'" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                }

            </td>
        </tr>
    }

</table>