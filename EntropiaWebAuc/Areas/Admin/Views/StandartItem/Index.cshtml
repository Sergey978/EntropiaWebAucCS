@model IEnumerable<EntropiaWebAuc.Domain.Entities.StandartItem>
@{
    ViewBag.Title = "StandartItems";

}

<h2>List  Standart Items</h2>
<table class="table table-striped table-responsive ">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Price)</th>
        <th>@Html.DisplayNameFor(model => model.Category)</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Price)</td>
            <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
            <td>


                @using (Html.BeginForm("Delete", "StandartItem"))
                {
                    @Html.Hidden("id", item.Id)
                    <input type="button" value="Edit" class ="btn btn-info"
                            onclick="location.href='@Url.Action("Edit", "StandartItem", new { id = item.Id })'" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                }

            </td>
        </tr>
    }

</table>
