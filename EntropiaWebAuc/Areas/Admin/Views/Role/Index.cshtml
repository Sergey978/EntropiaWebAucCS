@using EntropiaWebAuc.Areas.Admin.ViewModel
@{
    ViewBag.Title = "RoleIndex";

}
<div class="spacerBody">

    <h2>Role List</h2>

    <table class="table table-striped table-responsive ">
        <tr>
            <th>Role</th>
            <th>Amount point</th>
            <th>Amount standart items</th>
            <th>Amount custom items</th>
            <th>Action</th>
        </tr>
        @foreach (RoleViewModel role in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => role.Name)</td>
                <td>@Html.DisplayFor(modelItem => role.NumberPoint)</td>
                <td>@Html.DisplayFor(modelItem => role.NumberStandartItems)</td>
                <td>@Html.DisplayFor(modelItem => role.NumberCustomItems)</td>
                <td>
                    @using (Html.BeginForm("Delete", "Role"))
                    {
                        @Html.Hidden("id", role.Id)
                        <input type="button" value="Edit" class="btn btn-info"
                               onclick="location.href='@Url.Action("Edit", "Role", new { id = role.Id })'" />
                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to Delete?');" class="btn btn-danger" />
                    }
                </td>
            </tr>
        }

    </table>
    
</div>
