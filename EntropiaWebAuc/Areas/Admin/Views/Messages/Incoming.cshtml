@model IEnumerable<EntropiaWebAuc.Areas.Admin.ViewModel.MessagesViewModel>

@{
    Page.Title = "Incoming Messages";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSideBar.cshtml";
}

<h2>Page.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("MessageAct", "Messages"))
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <th><label><input type="checkbox" value=""></label></th>
            <th>
                @Html.DisplayNameFor(model => model.Message.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Message.SenderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message.Date)
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="@(item.Message.Read == false ? "font-weight:bold" : "")">


                <td>@Html.CheckBox(item.Message.Id.ToString())</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message.Title)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Message.SenderName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Message.Date)
                </td>



                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Message.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Message.Id, isAdmin = true }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Message.Id })
                </td>
            </tr>
        }

    </table>

    <label for="sel1">With selectes messages:</label>
    <div class=" form-group row">

        <div class="col-xs-4">
            @Html.DropDownList("actionId", new SelectList(
        new List<SelectListItem>
            {
            new SelectListItem { Selected = true, Text = "Set as not read", Value = "notRead"},
            new SelectListItem { Selected = false, Text = "remove", Value = "remove"},

            }, "Value", "Text", 1), new { @class = "form-control " })
        </div>
        <div class="col-xs-4">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>

}