@model EntropiaWebAuc.Areas.Default.ViewModels.GraphViewModel

<div class="col-md-12">
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <div class="col-sm-1">
                <label for="Item" class="control-label">Item</label>
            </div>
            <div class="col-sm-3">
                @Html.DropDownListFor(model => model.Items,
                        new SelectList(Model.Items, "Id", "Name"),
                                          new { @class = "form-control col-sm-2", @id = "Item" })

            </div>
            <div class="col-sm-2">
                <label for="PurchasePrice" class="control-label">Purchase Price</label>
            </div>
            <div class="col-sm-2">
                <input class="form-control" placeholder="" type="text" id="purchasePrice">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1">
                <label for="murkap" class="control-label">Markup</label>
            </div>
            <div class="col-sm-3">
                <input class="form-control" id="murkap" placeholder="" type="text">
            </div>
            <div class="col-sm-2">
                <label for="inputEmail3" class="control-label">Quantity</label>
            </div>
            <div class="col-sm-2">
                <input class="form-control" placeholder="" type="text">
            </div>
        </div>
    </form>
</div>
