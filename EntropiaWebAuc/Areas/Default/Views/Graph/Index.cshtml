
@{
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}
<hr />
<div class="container well">
    <div class="row ">
        <div class="col-md-3">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="item" class="col-sm-2 control-label">Item</label>
                    <div class="col-sm-10">
                        <select id="items" class="form-control input-sm"></select>

                    </div>
                </div>


                <div class="form-group">
                    <label for="value" class="col-sm-6 control-label">Value</label>

                    <div class="col-sm-6 ">
                        <input type="text" class="form-control input-sm " id="value">
                    </div>
                </div>

            </form>
        </div>
        <div class="col-md-3">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="purchasePrice" class="col-sm-6 control-label">Purchase</label>
                    <div class=" col-sm-6 ">
                        <input type="text" class="form-control input-sm" id="purchasePrice">
                    </div>
                </div>

                <div class="form-group">
                    <label for="markup" class="col-sm-6 control-label">Markup</label>

                    <div class=" col-sm-6 ">
                        <input type="text" class="form-control input-sm" id="markup">
                    </div>
                </div>

            </form>
        </div>
        <div class="col-md-3">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="purchasePrice" class="col-sm-6 control-label">Quantity</label>
                    <div class=" col-sm-6 ">
                        <input type="text" class="form-control" id="purchasePrice">
                    </div>
                </div>

                <div class="form-group">
                    <label for="markup" class="col-sm-6 control-label">Step</label>

                    <div class="col-sm-6 ">
                        <input type="text" class="form-control" id="markup">
                    </div>
                </div>

            </form>
        </div>
        <div class="col-md-3">
            <form class="form-horizontal">
                <div>
                    <br>
                </div>
            </form>
            <button class="btn btn-large btn-large btn-block btn-success"> Calc ! </button>
        </div>
    </div>
</div>
<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="container">
    <!-- Example row of columns -->
    <div class="row">
        <div class="col-md-7">
            <div class="graph-container">
                <div class="graph" id="graph">
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <table class="table table-fixed">
                <thead>
                    <tr>
                        <th class="col-xs-2 text-center">Quantity</th>
                        <th class="col-xs-3 text-center">Selling Price</th>
                        <th class="col-xs-3 text-center">Profit</th>
                        <th class="col-xs-2 text-center">Tax</th>
                        <th class="col-xs-2 text-center">Markup</th>
                    </tr>
                </thead>
                <tbody id="tbody"></tbody>
            </table>
        </div>
    </div>
    <hr>
    
</div>
