@model IEnumerable<EntropiaWebAuc.Domain.CustomItem>

   <h2>List My Custom Items</h2>
    <table class="table table-striped table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            
            <td>

                @using (Html.BeginForm("Delete", "CustomItem"))
                {
                    @Html.Hidden("id", item.Id)
                    <input type="button" value="Edit" class="btn btn-info"
                           onclick="location.href='@Url.Action("Edit", "CustomItem", new { id = item.Id })'" />
                    
                    <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to Delete @item.Name?');" 
                           class="btn btn-danger" />
                }

            </td>
        </tr>
    }

</table>
