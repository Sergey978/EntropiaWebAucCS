@model IEnumerable<EntropiaWebAuc.Domain.CustomItems>

@{
    Page.Title = "My Custom Items";
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";

}

<header id="head" class="secondary"></header>

<!-- container -->
<div class="container">

    <ol class="breadcrumb">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li class="active">Custom items</li>
    </ol>

    <h2>@Page.Title</h2>

    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-default">
                <div class="panel-body">

                    <input type="button" value="Create new Item" class="btn btn-success"
                           onclick="location.href='@Url.Action("Create", "CustomItem")'" />
                    <hr />
                    <table class="table table-striped table-responsive">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>

                            <th>Action</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>

                                <td>

                                    @using (Html.BeginForm("Delete", "CustomItem"))
                                    {
                                        @Html.Hidden("id", item.Id)
                                        <input type="button" value="Edit" class="btn-md btn-info"
                                               onclick="location.href='@Url.Action("Edit", "CustomItem", new { id = item.Id })'" />

                                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to Delete @item.Name?');"
                                               class="btn-md btn-danger" />
                                    }

                                </td>
                            </tr>
                        }

                    </table>
                </div>
                </div>
            </div>
        </div>
    </div>
                <!-- JavaScript libs are placed at the end of the document so the pages load faster -->
                @section Scripts {
                    @Scripts.Render("~/bundles/jquery")
                    @Scripts.Render("~/bundles/bootstrap")
                    @Scripts.Render("~/bundles/someeAdRemove")
                    @Scripts.Render("~/Content/js/headroom")

                }
