<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@Page.Title</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/style2")

</head>
<body class="home">
    <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top headroom">
        <div class="container">
            <div class="navbar-header">
                <!-- Button for smallest screens -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                <a class="navbar-brand" href="index.html"><img src="@Url.Content("~/Content/images/logo.png")" alt="Progressus HTML5 template"></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Account", "Index", "CustomItem") </li>
                        <li>@Html.ActionLink("Select Items", "Index", "SelectItems")</li>
                        <li>@Html.ActionLink("Graph", "Index", "Graph")</li>
                    }

                    @Html.Partial("_LoginPartial2")
                </ul>




            </div><!--/.nav-collapse -->
        </div>
    </div>
    <!-- /.navbar -->
    @RenderBody()
</body>
</html>
