@model EntropiaWebAuc.Areas.Default.ViewModels.SelectItemsViewModel
@using EntropiaWebAuc.Domain


    @if (ViewBag.message != null)
    {
        <div class="alert alert-danger">
            <strong>@ViewBag.message</strong>
        </div>
    }

    <div class="col-xs-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Custom Items</h3>
            </div>
            <div class="panel-body">
                @Html.ListBox("CustomItems",
               new MultiSelectList(Model.CustomItems, "Id", "Name"),
               new
               {
                   size = 15,
                   @class = "form-control"
               })

            </div>
        </div>
       
    </div>

    <div class="col-xs-2 ">
        <br />
        <br />
        <input type="submit" value=" ==> " name="Command"  class="form-control" />
        <br />
        <br />
        <input type="submit" value=" <== " name="Command" class="form-control" />

    </div>
    <div class="col-xs-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Your Selected Custom Items</h3>
            </div>
            <div class="panel-body">

                @Html.ListBox("SelectedCustomItems",
                        new SelectList(Model.SelectedCustomItems, "Id", "Name"),
               new
               {
                   size = 15,
                   @class = "form-control"
               })

            </div>
        </div>
    </div>

